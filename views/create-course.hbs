<form class="text-center border border-light p-5" action="/create/course" method="POST">
    <h1>Create Course</h1>

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" placeholder="Course name" name="title" value="{{course.title}}">
    </div>

    {{#if errors.title}}
    <section>
        <h6 class="notifications">{{errors.title}}</h6>
    </section>
    {{/if}}


    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" placeholder="Description" name="description">{{course.description}}</textarea>
    </div>

    {{#if errors.description}}
    <section>
        <h6 class="notifications">{{errors.description}}</h6>
    </section>
    {{/if}}

    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" class="form-control" placeholder="Image Url" name="imageUrl" value="{{course.imageUrl}}">
    </div>


    {{#if errors.imageUrl}}
    <section>
        <h6 class="notifications">{{errors.imageUrl}}</h6>
    </section>
    {{/if}}

    <div class="form-group">
        <label for="duration">Duration</label>
        <input type="text" class="form-control" placeholder="4 weeks" name="duration" value="{{course.duration}}">
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>