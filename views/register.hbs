<form class="text-center border border-light p-5" action="/register" method="POST">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" placeholder="Username" name="username" value="{{username}}">
    </div>

    {{#if errors.username}}
    <section>
        <h6 class="notifications">{{errors.username}}</h6>
    </section>
    {{/if}}

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password">
    </div>

    {{#if errors.password}}
    <section>
        <h6 class="notifications">{{errors.password}}</h6>
    </section>
    {{/if}}

    <div class="form-group">
        <label for="rePassword">Repeat Password</label>
        <input type="password" class="form-control" placeholder="Repeat-Password" name="rePassword">
    </div>

    {{#if errors.rePassword}}
    <section>
        <h6 class="notifications">{{errors.rePassword}}</h6>
    </section>
    {{/if}}


    <button type="submit" class="btn btn-primary">Register</button>
</form>